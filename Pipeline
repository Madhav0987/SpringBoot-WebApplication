pipeline{
  agent any
    tools {
	  jdk 'jdk17'
	  maven 'Maven3'
	}
	
	environment{
	    SCANNER_HOME= tool 'sonar-scanner'
	}
	
	 stages{
	   stage('git checkout'){
	     steps{
		     git branch: 'main', changelog: false, poll: false, url: 'https://github.com/Madhav0987/SpringBoot-WebApplication.git'
	   }
	 }
	 stage('sourcecode-compile'){
	     steps{
		     sh "mvn clean compile"
	   }
	 }
	 stage('unit-test'){
	     steps{
		    sh "mvn test"
	   }
	 }
stage('building docker image'){
	      steps{
	          script{
	              withDockerRegistry(credentialsId: 'f3d5383f-dc1d-46bc-a6c3-29f8d04a2b5d', toolName: 'Docker') {
	                  sh 'docker build -t ubuntu:v1 .'
               }
	          }
	      }
	  }
	 }
}
